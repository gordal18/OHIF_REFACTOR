@import "{ohif:design}/app"

$seriesCountBackgroundColor = #678696

.thumbnailEntry
  cursor: pointer
  display: table
  margin: 0 auto

  &.draggable
    cursor: copy
    cursor: -webkit-grab
    cursor: -moz-grab

  .seriesDetails
    theme('color', '$textPrimaryColor')
    font-size: 14px
    line-height: 1.3em
    margin-top: 5px
    max-width: 217px
    min-height: 36px
    position: relative
    word-wrap: break-word

    &.info-only

      .seriesDescription
        display: none

      .seriesInformation
        display: flex
        flex-grow: 1
        float: none
        max-width: none
        padding-right: 0

        .item
          flex: 1
          text-align: right!important
          float:right
          width:100%

          .icon, .value
            display: inline
            float: none
            line-height: 25px

          .value
            margin-left: 0
            width: auto

  .seriesInformation
    padding-right: 4px
    max-width: 50px
    .item-frames 
      .value
        border: 2px solid #00a4d9;
        border-radius: 50%;
        padding: 2px 5px;
        width: 28px !important;
        text-align: center;
        font-size:12px
        margin-top: 2px;
        margin-right:2px;
        color:#91b9cd
